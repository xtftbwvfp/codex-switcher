{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:default",
    "fs:default",
    "fs:allow-write-text-file",
    "fs:allow-read-text-file",
    {
      "identifier": "fs:scope",
      "allow": ["$HOME/**"]
    }
  ],
  "platforms": ["macOS", "windows", "linux"]
}
